{% extends 'base.html.twig' %}

{% block title %}Tickets{% endblock %}

{% block body %}
    <h1>Ticket details</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ ticket.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ ticket.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ ticket.description }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ ticket.status.value }}</td>
            </tr>
            <tr>
                <th>Priority</th>
                <td>{{ ticket.priority.value }}</td>
            </tr>
            <tr>
                <th>Deadline</th>
                <td>{{ ticket.deadline ? ticket.deadline|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Created_at</th>
                <td>{{ ticket.createdAt ? ticket.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Updated_at</th>
                <td>{{ ticket.updatedAt ? ticket.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>


    <h1>Ticket History</h1>
    <table class="table">
        <tbody>
        <tr>
            <th>Changed by</th>
            <th>Status</th>
            <th>Updated at</th>
        </tr>
        {% for item in history %}
        <tr>
                <td>{{ item.changedBy ? item.changedBy.email : 'N/A' }}</td>
                <td>{{ item.status ? item.status.value : 'N/A' }}</td>
                <td>{{ item.updatedAt ? item.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
        </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_tickets_index') }}">back to list</a>

    <a href="{{ path('app_tickets_edit', {'id': ticket.id}) }}">edit</a>

    {{ include('tickets/_delete_form.html.twig') }}
{% endblock %}
